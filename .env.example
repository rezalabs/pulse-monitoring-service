# The port the Pulse service will run on
PORT=8080

# A descriptive title for the web UI header
APP_TITLE="Pulse Monitor"

# A secret key for administrative actions (create, delete, update).
# This key must be passed in the 'Authorization' header as 'Bearer <secret>'.
ADMIN_SECRET="change-this-super-secret-key"

# --- Optional Webhook Reporting ---
# A global webhook URL for scheduled status reports (e.g., Google Chat, Slack).
WEBHOOK_URL=""

# The cron schedule for sending the status report webhook.
# Example: '0 9 * * 1-5' for 9 AM every weekday.
WEBHOOK_SCHEDULE="0 9 * * 1-5"

# The timezone for all cron schedules.
CRON_TIMEZONE="Asia/Jakarta"